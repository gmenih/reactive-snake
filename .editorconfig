# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**/{package.json,typings.json,*.conf.js,*-cli.json,tsconfig*.json,de.json,de-at.json,de-ch.json,en.json,en-us.json}]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false